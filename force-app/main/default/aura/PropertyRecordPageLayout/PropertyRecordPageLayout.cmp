<aura:component implements="lightning:recordHomeTemplate"
                description="A single column with a background image">
    <aura:attribute name="main"
                    type="Aura.Component[]" />
    <aura:attribute name="header"
                    type="Aura.Component[]" />
    <aura:attribute name="tile_1"
                    type="Aura.Component[]" />
    <aura:attribute name="tile_2"
                    type="Aura.Component[]" />
    <aura:attribute name="tile_3"
                    type="Aura.Component[]" />
    <aura:attribute name="rt_col"
                    type="Aura.Component[]" />
    <aura:handler event="c:toggleColumn"
                  action="{!c.doIt}" />
    <lightning:layout>
        <lightning:layoutItem size="12"
                              class="slds-m-bottom_small">
            {!v.header}
        </lightning:layoutItem>
    </lightning:layout>
    <lightning:layout verticalAlign="stretch"
                      class="slds-m-bottom_small">
        <lightning:layoutItem size="4"
                              class="slds-m-right_small">
            {!v.tile_1}
        </lightning:layoutItem>
        <lightning:layoutItem flexibility="grow"
                              class="slds-m-right_small">
            {!v.tile_2}
        </lightning:layoutItem>
        <lightning:layoutItem size="4">
            {!v.tile_3}
        </lightning:layoutItem>
    </lightning:layout>
    <lightning:layout pullToBoundary="small">
        <lightning:layoutItem flexibility="grow"
                              padding="horizontal-small">
            {!v.main}
        </lightning:layoutItem>
        <lightning:layoutItem aura:id="rtCol"
                              size="3"
                              class="slds-m-right_small">
            <lightning:card iconName="standard:account"
                            title="Right Column">
                {!v.rt_col}
            </lightning:card>
        </lightning:layoutItem>
    </lightning:layout>
</aura:component>